<html>
    <head>
        <title>Todo List</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="/assets/todo-list.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <h1>Company Todo list</h1>
                <div id='todo-table'>
                    <% if(typeof errors !== 'undefined'){ %>
                        <ul class="list-group mb-3">
                            <% for(var i=0; i < errors.length; i++) { %>
                                <li class="list-group-item list-group-item-danger"><%= errors[i].msg %></li>
                            <% } %>
                        </ul>
                    <% } %>
                    <form method="POST" action="/todo">
                        <div class="form-group">
                            <input class="form-control" type="text" name="task" placeholder="Add new task..." required />
                            <input class="form-control" type="text" name="email" placeholder="User email..." required />
                            <input class="form-control" type="text" name="phone" placeholder="User phone..." required />
                        </div>
                        <button class="form-control" type="submit">Add Task</button>
                    </form>
                    <ul class="list-group">
                        <% for(var i=0; i < todos.length; i++) { %>
                            <li class="list-group-item">
                                <div class="float-start"><%= todos[i].task %></div>
                                <div class="float-end"><i class="bi bi-trash f-right remove-button" data-id="<%= todos[i].id %>"></i></div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>